{
	"editor.renderWhitespace": "boundary",
	"cSpell.language": "fr,en",
	"scss.lint.duplicateProperties": "warning",
	"scss.lint.float": "warning",
	"scss.lint.important": "warning",
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": { "source.organizeImports": true },
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"postcssSorting.config": {
		"order": [
			"custom-properties",
			"dollar-variables",
			"declarations",
			{ "type": "rule", "selector": "&:hover" },
			{
				"type": "at-rule",
				"name": "include",
				"parameter": "media",
				"hasBlock": true
			},
			"at-rules",
			{ "type": "rule", "selector": "&::before" },
			{ "type": "rule", "selector": "&::after" },
			"rules"
			// before after
		],
		"properties-order": [
			"content",

			// Grid positioning
			"grid-area",
			"grid-row",
			"grid-row-start",
			"grid-row-end",
			"grid-column",
			"grid-column-start",
			"grid-column-end",

			// Box model
			"display",
			"grid-auto-rows",
			"grid-auto-columns",
			"grid-auto-flow",
			"grid-template",
			"grid-template-rows",
			"grid-template-columns",
			"grid-template-areas",
			"flex-wrap",
			"flex-direction",
			"place-content",
			"place-items",
			"place-self",
			"justify-content",
			"justify-items",
			"justify-self",
			"align-content",
			"align-items",
			"align-self",
			"gap",
			"row-gap",
			"column-gap",
			"position",
			"top",
			"left",
			"right",
			"bottom",
			"flex",
			"flex-grow",
			"flex-shrink",
			"flex-basis",
			"width",
			"min-width",
			"max-width",
			"height",
			"min-height",
			"max-height",
			"margin",
			"margin-top",
			"margin-left",
			"margin-right",
			"margin-bottom",
			"padding",
			"padding-top",
			"padding-left",
			"padding-right",
			"padding-bottom",
			"box-sizing",

			// Column
			"columns",
			"column-count",
			"column-width",
			"column-span",
			"column-fill",
			"column-gap",
			"column-rule",
			"column-rule-color",
			"column-rule-style",
			"column-rule-width",

			// Text
			"color",
			"font",
			"font-size",
			"font-weight",
			"font-style",
			"font-family",
			"font-variant",
			"letter-spacing",
			"text-transform",
			"text-decoration",
			"text-align",
			"line-height",
			"white-space",
			"-webkit-line-clamp",
			"list-style",
			"list-style-type",
			"list-style-image",
			"list-style-position",
			"page-break-before",
			"page-break-after",

			// Border
			"border",
			"border-color",
			"border-style",
			"border-width",
			"border-top",
			"border-top-color",
			"border-top-style",
			"border-top-width",
			"border-left",
			"border-left-color",
			"border-left-style",
			"border-left-width",
			"border-right",
			"border-right-color",
			"border-right-style",
			"border-right-width",
			"border-bottom",
			"border-bottom-color",
			"border-bottom-style",
			"border-bottom-width",
			"border-radius",

			// Background
			"background",
			"background-color",
			"background-image",
			"background-repeat",
			"background-size",
			"background-position",
			"background-attachment",
			"background-blend-mode",

			// Misc
			"object-fit",
			"object-position",
			"clip",
			"fill",
			"stroke",
			"stroke-width",
			"stroke-dasharray",
			"stroke-dashoffset",
			"box-shadow",
			"filter",
			"cursor",
			"z-index",
			"overflow",
			"overflow-x",
			"overflow-y",
			"visibility",
			"user-select",
			"pointer-events",
			"content-visibility",

			// Composite
			"opacity",
			"transform",
			"transform-origin",
			"perspective",
			"perspective-origin",
			"will-change",

			// Animations
			"transition",
			"transition-duration",
			"transition-delay",
			"transition-property",
			"transition-timing-function",
			"animation",
			"animation-name",
			"animation-duration",
			"animation-delay",
			"animation-property",
			"animation-fill-mode",
			"animation-timing-function"
		]
	},
	"cSpell.words": ["picto"],
	"svg.preview.background": "transparent"
}
